
{% block body -%}
    <h1>Thematic list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Secrets</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_thematic_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.secrets|length }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_thematic_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_thematic_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_thematic_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
