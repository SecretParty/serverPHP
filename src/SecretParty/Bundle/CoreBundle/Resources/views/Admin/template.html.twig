<!doctype html>
<html lang="{{ app.request.locale }}">

<head>
    <meta charset="utf-8"/>
    <title>{% trans %}Secret party server{% endtrans %} - {{ block('title') }}</title>

    {% stylesheets 'bundles/secretpartycore/css/layout.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <!--[if lt IE 9]>
    <link rel="stylesheet" href="css/ie.css" type="text/css" media="screen" />
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>


<body>

<header id="header">
    <hgroup>
        <h1 class="site_title"><a href="index.html">{% trans %}Secret Party Admin{% endtrans %}</a></h1>
        <h2 class="section_title">{{ block('section') }}</h2><div class="btn_view_site"><a href="{{ path('nelmio_api_doc_index') }}">{% trans %}View api doc{% endtrans %}</a></div>
    </hgroup>
</header> <!-- end of header bar -->

<section id="secondary_bar">
    <div class="user">
        <p>{{ app.user.username }}</p>
        <a class="logout_user" href="{{ path('fos_user_security_logout') }}" title="{% trans %}Logout{% endtrans %}">{% trans %}Logout{% endtrans %}</a>
    </div>
</section><!-- end of secondary bar -->

<aside id="sidebar" class="column">
    {{ knp_menu_render('main',{ 'template': 'SecretPartyCoreBundle:Admin:menu.html.twig'}) }}

    <footer>
        <hr />
        <p><strong>Copyright &copy; 2011 Website Admin</strong></p>
        <p>Theme by <a href="http://www.medialoot.com">MediaLoot</a></p>
    </footer>
</aside><!-- end of sidebar -->

<section id="main" class="column">

<article class="module width_full">
    <header>
        <h3 class="tabs_involved">{{ block('title') }}</h3>
    {{ block('end_header') }}
    </header>
    {% block content %}{% endblock %}
    <div class="clear"></div>
</article><!-- end of article -->

<div class="spacer"></div>
</section>
{% javascripts  '@SecretPartyCoreBundle/Resources/public/js/jquery-1.10.2.min.js'
                '@SecretPartyCoreBundle/Resources/public/js/hideshow.js'
                '@SecretPartyCoreBundle/Resources/public/js/jquery.tablesorter.min.js'
                '@SecretPartyCoreBundle/Resources/public/js/jquery.equalHeight.js'
                '@SecretPartyCoreBundle/Resources/public/js/collection.js'
                '@SecretPartyCoreBundle/Resources/public/js/main.js'%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>

</html>